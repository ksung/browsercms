<% use_page_title "Set New Password" %>
<%= render 'toolbar' %>

<%= content_for :html_head do %>
  <%= stylesheet_link_tag('cms/form_layout') %>
<% end %>

<%= form_for([:update_password, @user]) do |f| %>
  <%= f.cms_error_messages %>
  <%= render :partial => 'password', :locals => {:f => f} %>
  <div class="buttons">
    <%= lt_button_wrapper(f.submit("Save", :class => "submit")) %>
  </div>
<% end %>
